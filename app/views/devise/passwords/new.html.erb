<div class="position" style="background-color:#63E9D4; padding:280px; 
	  padding-bottom:100px;">
<h2 style="text-align:center;">비밀번호 찾기</h2>

<center>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  
  
      <div class="field form-group form-group-lg" style="font-family:Arial">
        <%= f.email_field :email, class:"form-control", :placeholder => "이메일", autofocus: true %>
    </div>


   <div class="field form-group form-group-lg" style="font-family:Arial">
      <%= f.submit "이메일보내기" , class:"form-control" %>
    </div>

<% end %>

<%= render "devise/shared/links" %>
</center>

<style type="text/css">
.field{ border: none;
                  width: 400px;
                  height: 30px;
                  color: white;
                  font-size: 16px;
                  border-radius: 10px;
                  margin-top: 30px;
                  margin-bottom: 10px;
                }
</style>