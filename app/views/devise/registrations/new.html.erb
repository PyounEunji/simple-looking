<center>
<body style="background-size:cover; background-color:#290303; padding:280px;">
<div class="position">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="field form-group form-group-lg" style="font-family:Arial">
        <%= f.text_field :nickname, class:"form-control", :placeholder => "닉네임", autofocus: true %>
      </div>

      <div class="field form-group form-group-lg"  style="font-family:Arial">
        <%= f.email_field :email, class:"form-control", :placeholder => "이메일", autofocus: false %>
      </div>
 
      <div class="field form-group form-group-lg" style="margin-bottom:60px; font-family:Arial">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>자이상)</em>
        <% end %><br />
        <%= f.password_field :password, class:"form-control", :placeholder => "비밀번호", autocomplete: "off" %>
      </div>


      <div class="field form-group form-group-lg" style="font-family:Arial">
        <%= f.password_field :password_confirmation, class:"form-control", :placeholder => "비밀번호 확인", autocomplete: "off" %>
    </div>

  
  <div class="field form-group form-group-lg">
    <%= f.submit "가입하기", class:"btn btn-block btn-primary"%>
  </div>
<% end %>
</div>
<%# render "devise/shared/links" %>
</body>
</center>

<style type="text/css">
.field{ border: none;
                  width: 400px;
                  height: 30px;
                  color: white;
                  font-size: 16px;
                  border-radius: 10px;
                  margin-top: 30px;
                  margin-bottom: 20px;
                }
</style>